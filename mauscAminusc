// minuscula2.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//
#include "stdafx.h"
#include <stdio.h>
#include <ctype.h> //<---aqui se encuentran las funciones toupper y tolower
#include "conio.h"
#include <iostream>
#include <string>

using namespace std;
 
int main()
{
   string cadena;
   getline(cin,cadena);
   
   for(int i = 0;i< cadena.length(); i++)
   {   
        
		cadena[i]=tolower(cadena.at(i));
   }
   
   cout<<cadena; 
   
   getch();
   return 0;
}
